{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "declaration": false,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "allowJs": true,
        "outDir": "./build",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "node_modules/*",
            ]
        }
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}